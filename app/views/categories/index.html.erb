<p id="notice"><%= notice %></p>

<h1><%=link_to "Categories", categories_path %> </h1>


<%= search_form_for @q do |f| %>

  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>



<table>
  <thead>
    <tr>

      <th><%= sort_link(@q, :name, default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= link_to edit_category_path(category) do%>
            <span class="fa fa-edit"></span>
          <% end %>
          </td>
        <td><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-trash"></span>


          <% end %>

        </td>
        <td>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to new_category_path do%>
            <span class="fa fa-plus"> Category</span>
          <% end %>

