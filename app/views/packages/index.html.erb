<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Barcode</th>
      <th>Pkgsize</th>
      <th>Size</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= link_to package.product.name, package %></td>
        <td><%= package.barcode %></td>
        <td><%= package.pkgsize %></td>
        <td><%= package.size %></td>
        <td><%= package.unit.name  %></td>

       <td><%= link_to edit_package_path(package) do%>
            <span class="fa fa-edit"></span>
          <% end %>
          </td>
        <td><%= link_to package, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-trash"></span>


          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
