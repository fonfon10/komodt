<p id="notice"><%= notice %></p>

<h1><%=link_to "Products", products_path %> </h1>


<%= search_form_for @q do |f| %>

  
  <%= f.search_field :name_or_supplier_name_or_category_name_cont %>

  <%= f.submit %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, default_order: :desc) %></th>
      <th>Supplier</th>
      <th>Category</th>
      <th>SubCategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= link_to product.supplier.name, supplier_path(product.supplier_id) %></td>
        <td><%= product.category.name %></td>
        <td><%= product.sub_category.name %></td>
       <td><%= link_to edit_product_path(product) do%>
            <span class="fa fa-edit"></span>
          <% end %>
          </td>
        <td><%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-trash"></span>


          <% end %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_product_path do%>
            <span class="fa fa-plus"> Product</span>
          <% end %>
